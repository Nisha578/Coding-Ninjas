public class Solution {
        public static String replace(String str) {
            if(str.length() <= 1){
              return str;
            }
            if(str.charAt(0) == 'p' && str.charAt(1) == 'i') {
                String temp = replace(str.substring(2);
                   return "3.14" + temp;
             }
             else {
                  String temp = replace(str.substring(1));
                  return str.charAt(0) + temp;
             }
         }
}         
