public class Solution { 
   public static int firstIndex(int input[],int x,int fi) {
      if(fi == input.length) {
         return -1;
      }
      else if(input[fi] == x) {
         return fi;
      }
      else {
      return firstIndex(input,x,fi+1);
      }
   }
   public static int firstIndex(int input[],int x) {
      return firstIndex(input,x,0);
     }
   }  
  
